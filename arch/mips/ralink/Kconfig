	select USB_ARCH_HAS_EHCI
endchoice

choice
        prompt "RT3883 PCI architecture"
	default PCIE_PCI_CONCURRENT

config PCIE_PCI_CONCURRENT
        bool "PCIE RC and PCI HOST CONCURRENT"
	select PCI
config PCIE_ONLY
        bool "PCIE RC ONLY"
	select PCI
config PCI_ONLY
        bool "PCI HOST ONLY"
	select PCI
config PCIE_PCI_NONE
        bool "Non-support PCI/PCIe"
endchoice

endif

